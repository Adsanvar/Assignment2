<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/i1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/news1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/i9"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:text="Thai Chicken"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/i10"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:text="Cooked in a fiery hot wok in a matter of minutes, it’s packed with flavor, tender peppers and onions, perfectly cooked golden brown chicken, and a sauce that will make you go back for seconds…and thirds…and get excited for leftovers at lunch."
                android:textSize="12dp"

                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/t3"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:text="Noodles"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/t4"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:text="Cooked in a fiery hot wok in a matter of minutes, it’s packed with flavor, tender peppers and onions, perfectly cooked golden brown chicken, and a sauce that will make you go back for seconds…and thirds…and get excited for leftovers at lunch."
                android:textSize="12dp"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/i4"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/news2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/i6"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/news3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/ii"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:text="Dimsum"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/i2"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:text="Cooked in a fiery hot wok in a matter of minutes, it’s packed with flavor, tender peppers and onions, perfectly cooked golden brown chicken, and a sauce that will make you go back for seconds…and thirds…and get excited for leftovers at lunch."
                android:textSize="12dp"

                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>